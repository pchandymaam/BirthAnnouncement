<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pchandymaam.birthannouncement.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/aquanight"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Aaron Keegan Lane"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textSize="32dp"
        android:padding="8dp"
        android:background="#B2EBF2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Born: October 30th , 2011 at 9:53 pm \n\nWeight:  8 Pounds  Height: 22 Inches\n\nProud Parents:\n\nMarc Jason Lane and Candice Ann Brazil"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="8dp"
        android:background="#B2EBF2"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:background="#B2EBF2"
        android:layout_marginTop="8dp"
        android:src="@drawable/babypic"/>

</LinearLayout>

</RelativeLayout>
